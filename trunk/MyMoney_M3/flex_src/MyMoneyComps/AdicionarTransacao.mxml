<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300">
	<mx:Panel width="100%" height="100%" title="Adicionar Operação">
		<mx:Form width="100%" height="100%">
			<mx:FormItem label="Valor:">
				<mx:TextInput id="valor"/>
			</mx:FormItem>
			<mx:FormItem label="Data:">
				<mx:DateField id="data"/>
			</mx:FormItem>
			<mx:FormItem label="Tipo da Operação:">
				<mx:RadioButtonGroup id="TipoOperacao"/>
				<mx:RadioButton label="CRÉDITO" groupName="TipoOperacao" selected="true"/>
				<mx:RadioButton label="DÉBITO" groupName="TipoOperacao"/>
			</mx:FormItem>
			<mx:FormItem label="Forma de Pagamento:">
				<mx:RadioButtonGroup id="FormaPagamento"/>
				<mx:RadioButton label="DINHEIRO" groupName="FormaPagamento" selected="true"/>
				<mx:RadioButton label="CHEQUE" groupName="FormaPagamento"/>
				<mx:RadioButton label="CARTÃO DE CRÉDITO" groupName="FormaPagamento"/>
			</mx:FormItem>
		</mx:Form>
		<mx:HBox width="100%" horizontalAlign="center">
			<mx:Button label="OK"/>
			<mx:Button label="Cancelar"/>
		</mx:HBox>
	</mx:Panel>
</mx:VBox>
