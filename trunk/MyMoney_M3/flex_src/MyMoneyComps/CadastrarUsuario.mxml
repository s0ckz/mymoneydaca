	<mx:Script>
		<![CDATA[
			import mx.rpc.events.ResultEvent;
			import remote.RemoteFacade;
			private function cancelar():void {
				dispatchEvent(new CadastrarUsuarioEvent(CadastrarUsuarioEvent.CANCELAR));
			}
			
			private function cadastrar():void {
				RemoteFacade.getInstance().registerUser(callBack);
			}
			
			private function callBack(e:ResultEvent):void {
			}
		]]>
	</mx:Script>
	<mx:Form width="100%">
		<mx:FormItem label="Nome:" width="100%">
			<mx:TextInput id="nome" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="Login:" width="100%">
			<mx:TextInput id="login" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="Senha:" width="100%">
			<mx:TextInput id="senha" displayAsPassword="true" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="Sexo:" width="100%">
			<mx:RadioButton label="Masculino" groupName="sexo"/>
			<mx:RadioButton label="Feminino" groupName="sexo"/>
		</mx:FormItem>
		<mx:FormItem label="E-mail:" width="100%">
			<mx:TextInput id="email" width="100%"/>
		</mx:FormItem>
	</mx:Form>
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button label="OK" click="cadastrar();"/>
		<mx:Button label="Cancelar" click="cancelar();"/>
	</mx:HBox>
</mx:Panel>
